# Docker Postgres (see docker-compose.yml)
POSTGRES_DB=nomemory
POSTGRES_USER=nomemory
POSTGRES_PASSWORD=nomemory
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432

# SQLAlchemy DSN (preferred)
DATABASE_URL=postgresql+psycopg://nomemory:nomemory@127.0.0.1:5432/nomemory

# Cursor signing + ingest auth (dev defaults shown; change in production)
CURSOR_SECRET=dev-insecure
INGEST_API_KEY=dev-ingest-key

# Retrieval skill to load (directory name under ./skills)
RECALL_SKILL=nomemory-recall-default
# Recall agent runtime config (budgets/limits/allowed tools). Kept outside skills by design.
RECALL_AGENT_CONFIG_PATH=config/recall_agent.json

# Model config (defaults: provider=bigmodel, model=glm-4.7-flash)
LLM_PROVIDER=bigmodel
LLM_MODEL=glm-4.7-flash

# BigModel (Zhipu) API
BIGMODEL_API_KEY=replace_me
# Defaults follow BigModel docs (override if your gateway differs)
BIGMODEL_CHAT_ENDPOINT=https://open.bigmodel.cn/api/paas/v4/chat/completions
BIGMODEL_EMBEDDING_ENDPOINT=https://open.bigmodel.cn/api/paas/v4/embeddings
BIGMODEL_EMBEDDING_MODEL=embedding-3
